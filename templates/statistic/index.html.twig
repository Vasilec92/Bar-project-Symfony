{% extends 'base.html.twig' %}

{% block title %}Hello StatisticController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{title}}</h1>
    <table class="table">
        <thead>
            <tr>           
            <th scope="col">Name</th>
            <th scope="col">Beer</th>
            <th scope="col">Price</th>
            <th scope="col">Number beer</th>
            </tr>
        </thead>
        <tbody>
            {% for el in statistic %}
            <tr>
                <td>{{el.clientId.name}}</td>
                <td>{{el.beerId.name}}</td>
                <td>{{el.beerId.price}}</td>
                <td>{{el.clientId.numberBeer}}</td>
            </tr>
            {% endfor %} 
            </table>
        <table class="table">
        <h1>Number beer par personne</h1>
        <thead>
            <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">weight</th>
            <th scope="col">Total beers</th>
            </tr>
        </thead>
        <tbody>
            {% for client in clients %}
                <tr>
                    <th scope="row">{{ client.id }}</th>
                    <td>{{ client.name }}</td>
                    <td>{{ client.email }}</td>
                    <td>{{ client.weight }}</td>
                    
                    <td>{{ totalBeers(client.id) }}</td>
                </tr>
                {% endfor %}          
         </tbody>
        
</div>
{% endblock %}
